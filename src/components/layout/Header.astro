---
// Header.astro - Sticky navigation bar with glassmorphism effect
// Fluent 2.0 Professional Design System
interface Props {
  transparent?: boolean;
}

const { transparent = false } = Astro.props;
const currentPath = Astro.url.pathname;
---

<header
  class:list={[
    "sticky top-0 z-50 w-full transition-all duration-normal ease-standard",
    transparent
      ? "glass-surface shadow-md"
      : "glass-surface shadow-lg",
  ]}
>
  <nav class="container mx-auto px-4" aria-label="Główna nawigacja">
    <div class="flex items-center justify-between h-16">
      <!-- Logo / Brand -->
      <a
        href="/"
        class="flex items-center gap-3 text-foreground hover:text-primary transition-colors duration-fast group"
      >
        <div
          class="w-10 h-10 rounded-lg bg-gradient-to-br from-primary to-primary/80 flex items-center justify-center shadow-md group-hover:shadow-lg transition-shadow"
        >
          <span class="text-primary-foreground font-bold text-xl">P</span>
        </div>
        <span class="font-bold text-body-large hidden sm:inline">
          PrawnikGPT
        </span>
      </a>

      <!-- Navigation Links -->
      <div class="flex items-center gap-2">
        <!-- Desktop Navigation -->
        <div class="hidden md:flex items-center gap-2 mr-4">
          <a
            href="/app"
            class:list={[
              "px-4 py-2 rounded-lg text-body font-medium transition-all duration-normal",
              currentPath.startsWith("/app")
                ? "bg-primary/10 text-primary"
                : "text-muted-foreground hover:bg-accent hover:text-accent-foreground",
            ]}
          >
            Aplikacja
          </a>
          <a
            href="/pricing"
            class:list={[
              "px-4 py-2 rounded-lg text-body font-medium transition-all duration-normal",
              currentPath === "/pricing"
                ? "bg-primary/10 text-primary"
                : "text-muted-foreground hover:bg-accent hover:text-accent-foreground",
            ]}
          >
            Cennik
          </a>
        </div>

        <!-- Auth Buttons -->
        <div class="flex items-center gap-2">
          <a
            href="/login"
            class="inline-flex items-center justify-center gap-2 whitespace-nowrap font-semibold ring-offset-background transition-all focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 border-2 border-primary bg-background text-primary hover:bg-primary hover:text-primary-foreground active:bg-primary-active rounded-lg shadow-sm hover:shadow-md duration-normal ease-standard h-[var(--button-height-md)] px-[var(--button-padding-x-md)] text-body"
            aria-label="Zaloguj się do istniejącego konta"
          >
            Zaloguj się
          </a>
          <a
            href="/register"
            class="inline-flex items-center justify-center gap-2 whitespace-nowrap font-semibold ring-offset-background transition-all focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 bg-primary text-primary-foreground hover:bg-primary-hover active:bg-primary-active rounded-lg shadow-md hover:shadow-lg active:shadow-sm duration-normal ease-standard h-[var(--button-height-md)] px-[var(--button-padding-x-md)] text-body"
            aria-label="Wypróbuj PrawnikGPT za darmo - przejdź do rejestracji"
          >
            Wypróbuj
          </a>
        </div>

        <!-- Dark Mode Toggle (placeholder for future implementation) -->
        <!-- <button
          type="button"
          class="ml-2 p-2 rounded-lg hover:bg-accent transition-colors"
          aria-label="Przełącz motyw"
        >
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
        </button> -->
      </div>
    </div>
  </nav>
</header>
