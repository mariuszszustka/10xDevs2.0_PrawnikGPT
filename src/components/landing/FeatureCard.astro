---
// FeatureCard.astro - Reużywalna karta prezentująca pojedynczą funkcjonalność
// Updated with Fluent 2.0 elevation and professional styling
interface Props {
  icon: string; // Emoji lub SVG
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div
  class="group flex flex-col items-center text-center p-8 bg-card rounded-lg shadow-lg border border-border/50 hover:shadow-xl hover:border-primary/30 hover:-translate-y-1 transition-all duration-normal ease-standard"
>
  <!-- Icon with gradient background -->
  <div
    class="flex items-center justify-center w-16 h-16 mb-6 rounded-xl bg-gradient-to-br from-primary/10 to-accent/10 group-hover:from-primary/20 group-hover:to-accent/20 transition-all duration-normal"
    role="img"
    aria-label={`Ikona dla ${title}`}
  >
    <span class="text-4xl">{icon}</span>
  </div>

  <!-- Title with Fluent Typography -->
  <h3 class="text-headline font-semibold text-foreground mb-3">
    {title}
  </h3>

  <!-- Description -->
  <p class="text-body text-muted-foreground leading-relaxed">
    {description}
  </p>
</div>

