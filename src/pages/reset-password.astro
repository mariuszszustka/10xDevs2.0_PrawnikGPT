---
import BaseLayout from '../layouts/BaseLayout.astro';
import { ResetPasswordForm } from '../components/auth/ResetPasswordForm';

// Get token from URL parameters (optional - Supabase also handles tokens from URL hash)
const url = Astro.url;
const token = url.searchParams.get('token') || undefined;

// Note: Supabase typically sends reset tokens in URL hash (#access_token=...&type=recovery)
// If no token in query param, the component will check for hash token automatically
---

<BaseLayout title="Reset hasła - PrawnikGPT">
  <main class="min-h-screen flex items-center justify-center bg-gray-50">
    <div class="w-full max-w-md p-8 bg-white rounded-lg shadow-md">
      <h1 class="text-3xl font-bold text-gray-900 mb-6 text-center">
        Reset hasła
      </h1>
      <p class="text-gray-600 mb-8 text-center">
        Wprowadź nowe hasło dla swojego konta
      </p>
      
      <ResetPasswordForm client:load token={token} />
      
      <p class="mt-6 text-center text-sm text-gray-600">
        <a href="/login" class="text-blue-600 hover:text-blue-700 font-medium">
          Powrót do logowania
        </a>
      </p>
    </div>
  </main>
</BaseLayout>
