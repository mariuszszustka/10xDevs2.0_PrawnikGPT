---
import BaseLayout from '../layouts/BaseLayout.astro';
import { LoginForm } from '../components/auth/LoginForm';

// Get URL parameters
const url = Astro.url;
const redirectTo = url.searchParams.get('redirect_to') || '/app';
const expired = url.searchParams.get('expired') === 'true';
---

<BaseLayout title="Logowanie - PrawnikGPT">
  <main class="min-h-screen flex items-center justify-center bg-gray-50">
    <div class="w-full max-w-md p-8 bg-white rounded-lg shadow-md">
      <h1 class="text-3xl font-bold text-gray-900 mb-6 text-center">
        Logowanie
      </h1>
      <p class="text-gray-600 mb-8 text-center">
        Zaloguj się, aby uzyskać dostęp do PrawnikGPT
      </p>
      
      <LoginForm client:load redirectTo={redirectTo} showExpiredMessage={expired} />
      
      <p class="mt-6 text-center text-sm text-gray-600">
        Nie masz konta?{' '}
        <a href="/register" class="text-blue-600 hover:text-blue-700 font-medium">
          Zarejestruj się
        </a>
      </p>
    </div>
  </main>
</BaseLayout>

